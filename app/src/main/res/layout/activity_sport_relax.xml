<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".activity.SportRelaxActivity">
    <!--    放松可选项-->
    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/bg_relax_selaction"
        android:id="@+id/rv_select_relax_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--    已经选择的Item-->
    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/bg_relax_selacted"
        android:id="@+id/rv_selected_relax"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_start_relax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_select_relax_item" />
    <TextView
        android:id="@+id/tv_start_relax"
        android:textSize="18sp"
        android:padding="10dp"
        android:text="开始放松"
        android:textStyle="bold"
        android:textColor="@color/default_text_color"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>